<Window x:Class="TurboSnip.WPF.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:TurboSnip.WPF.Properties"
        Title="{Binding AboutTitle}" 
        Height="Auto" Width="450"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <!-- Icon Placeholder -->
            <Image Source="/ico/app.ico" Width="80" Height="80" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,0,15"/>
            
            <TextBlock Text="TurboSnip" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="16" Opacity="0.8"/>
            
            <Separator Opacity="0.2" Margin="0,20"/>
            
            <TextBlock Text="{Binding AboutDesignedBy}" FontWeight="SemiBold" FontSize="14"/>
            <TextBlock Text="{Binding AboutPoweredBy}" 
                       TextWrapping="Wrap" Opacity="0.7" FontSize="12" Margin="0,5,0,0"/>
            
            <Button Content="{Binding AboutClose}" Width="120" Height="35" Margin="0,25,0,10"
                    IsCancel="True" Click="Close_Click"
                    Style="{DynamicResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
