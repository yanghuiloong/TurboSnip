<Window x:Class="TurboSnip.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TurboSnip.WPF.ViewModels"
        xmlns:conv="clr-namespace:TurboSnip.WPF.Converters"
        xmlns:views="clr-namespace:TurboSnip.WPF.Views"
        mc:Ignorable="d"
        Title="TurboSnip" Height="800" Width="1500" MinWidth="800" MinHeight="500"
        Icon="/ico/app.ico"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <conv:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter"/>



        <!-- Modern ScrollBar -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="GridRoot" Width="8" Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" Style="{DynamicResource ScrollThumbs}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="false" Background="Transparent"/>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="false" Background="Transparent"/>
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="GridRoot" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="PART_Track" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Width" Value="Auto"/>
                                <Setter Property="Height" Value="8"/>
                                <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Grid x:Name="Grid">
                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Fill="Transparent"/>
                            <Border x:Name="Rectangle1" CornerRadius="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Background="{TemplateBinding Background}" Opacity="0.4"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Horizontal">
                                <Setter TargetName="Rectangle1" Property="Width" Value="Auto"/>
                                <Setter TargetName="Rectangle1" Property="Height" Value="6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Rectangle1" Property="Opacity" Value="0.8"/>
                                <Setter TargetName="Rectangle1" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="Rectangle1" Property="Opacity" Value="1.0"/>
                                <Setter TargetName="Rectangle1" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource ContentBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Flat ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource ContentBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
             <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                         <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          BorderBrush="{TemplateBinding BorderBrush}" 
                                          Background="{TemplateBinding Background}"
                                          Foreground="{TemplateBinding Foreground}"
                                          Grid.Column="2" 
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border" 
                                                Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="1" 
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Content="{TemplateBinding Content}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                <Path x:Name="Arrow" Grid.Column="1" Fill="#999" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M0,0 L4,4 L8,0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="10,0,25,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="{DynamicResource ContentBackgroundBrush}" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Root Grid -->
    <Grid>

    <!-- Original Content Grid with Margin -->
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15" Background="{DynamicResource AppBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Icon + Title -->
                <ColumnDefinition Width="Auto"/> <!-- Capture Btn -->
                <ColumnDefinition Width="*"/>    <!-- Spacer -->
                <ColumnDefinition Width="Auto"/> <!-- Controls -->
            </Grid.ColumnDefinitions>

            <!-- 1. Branding -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/ico/app.ico" Width="24" Height="24" Margin="0,0,12,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="TurboSnip" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 2. Primary Action -->
            <Button Grid.Column="1" Content="{Binding UiSnipBtn}" Command="{Binding CaptureCommand}" Style="{StaticResource CaptureButtonStyle}" Margin="20,0,0,0"/>

            <!-- 3. Settings / Options -->
            <StackPanel Grid.Column="3" Orientation="Horizontal">
                <!-- Theme Toggle -->
                <ToggleButton x:Name="ThemeToggle" Content="&#xE793;" FontFamily="Segoe MDL2 Assets" 
                              Click="ThemeToggle_Click"
                              Margin="0,0,15,0" Width="32" Height="32"
                              Style="{StaticResource ModernToggleButtonStyle}"
                              BorderThickness="1" BorderBrush="#3E3E42"
                              ToolTip="Toggle Theme (Dark/Light)"/>

                <!-- Model -->
                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="{Binding UiModelLabel}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,2"/>
                    <ComboBox ItemsSource="{Binding ModelOptions}" SelectedItem="{Binding SelectedModel}" DisplayMemberPath="Name" Width="180"/>
                </StackPanel>
                
                <!-- Hardware -->
                 <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="{Binding UiHardwareLabel}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,2"/>
                    <ComboBox ItemsSource="{Binding HardwareOptions}" SelectedItem="{Binding SelectedHardware}" DisplayMemberPath="Name" Width="160"/>
                </StackPanel>

                <!-- Language -->
                <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                    <TextBlock Text="{Binding UiLanguageLabel}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" Margin="0,0,0,2"/>
                    <ComboBox ItemsSource="{Binding LanguageOptions}" SelectedItem="{Binding SelectedLanguage}" DisplayMemberPath="Name" Width="120"/>
                </StackPanel>

                <!-- Help & About -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,8,0,0">
                    <Button Content="" FontFamily="Segoe MDL2 Assets" 
                            ToolTip="Help" 
                            Command="{Binding ShowHelpCommand}"
                            Style="{StaticResource ModernButtonStyle}" 
                            FontSize="16" Width="36" Height="36" Margin="0,0,5,0"/>
                    <Button Content="" FontFamily="Segoe MDL2 Assets" 
                            ToolTip="About" 
                            Command="{Binding ShowAboutCommand}"
                            Style="{StaticResource ModernButtonStyle}" 
                            FontSize="16" Width="36" Height="36"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Source (Image + OCR) -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="*"/>    <!-- Image -->
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="*"/>    <!-- OCR -->
                </Grid.RowDefinitions>

                <!-- Image Header -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <TextBlock Text="{Binding ScreenshotHeader}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    <Button Command="{Binding CopyImageCommand}" Content="{Binding ImageCopyButtonText}" 
                            HorizontalAlignment="Right" Style="{StaticResource IconButtonStyle}" ToolTip="Copy Image"/>
                </Grid>

                <!-- Image View -->
                <Border Grid.Row="1" Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="8" ClipToBounds="True" Margin="0,0,0,10">
                    <Grid>
                        <Image Source="{Binding CapturedImage}" Stretch="Uniform"/>
                        
                        <!-- Overlay: Press Alt+Q -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Visibility="{Binding CapturedImage, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding ScreenshotOverlayText}" 
                                       FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.5"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- OCR Header -->
                <Grid Grid.Row="2" Margin="0,0,0,5">
                    <TextBlock Text="{Binding UiSourceLabel}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    <Button Command="{Binding CopyOriginalCommand}" Content="{Binding OriginalCopyButtonText}" 
                            HorizontalAlignment="Right" Style="{StaticResource IconButtonStyle}" ToolTip="Copy Text"/>
                </Grid>

                <!-- OCR Text with Overlay -->
                <Grid Grid.Row="3">
                    <TextBox Text="{Binding OriginalText}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                    
                    <!-- OCR Overlay (Busy or Empty) -->
                    <Grid Visibility="{Binding IsOcrBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                             <ProgressBar IsIndeterminate="True" Width="30" Height="30" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,8"/>
                             <TextBlock Text="{Binding OcrOverlayText}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Empty Hint (Only if NOT busy and Text is Empty) -->
                    <TextBlock Text="{Binding OcrOverlayText}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.5"
                               Visibility="{Binding IsOcrPlaceholderVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="Transparent" Width="8"/>

            <!-- RIGHT: Translation -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                 <!-- Translation Header -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <TextBlock Text="{Binding UiTargetLabel}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    <Button Command="{Binding CopyTranslationCommand}" Content="{Binding TranslationCopyButtonText}" 
                            HorizontalAlignment="Right" Style="{StaticResource IconButtonStyle}" ToolTip="Copy Translation"/>
                </Grid>

                <!-- Translation Text with Overlay -->
                <Grid Grid.Row="1">
                    <TextBox Text="{Binding TranslatedText}" AcceptsReturn="True" TextWrapping="Wrap" FontSize="16" VerticalScrollBarVisibility="Auto"/>

                     <!-- Translation Overlay (Busy) -->
                    <Grid Visibility="{Binding IsTranslationBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                             <ProgressBar IsIndeterminate="True" Width="30" Height="30" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,8"/>
                             <TextBlock Text="{Binding TranslationOverlayText}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>

                     <!-- Empty Hint / Manual Translate Button -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TranslationOverlayText}" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" Opacity="0.5"
                                   Visibility="{Binding IsTranslationPlaceholderVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <Button Command="{Binding TranslateManualCommand}" 
                                Content="{Binding TranslateBtnText}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="80,30"
                                FontSize="18"
                                FontWeight="Bold"
                                Visibility="{Binding IsManualTranslateVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- Status Bar (Clean) -->
        <StatusBar Grid.Row="2" Background="{DynamicResource AppBackgroundBrush}" Foreground="{DynamicResource TextSecondaryBrush}" 
                   Margin="0,0,0,0" Padding="10,5" BorderThickness="0">
            <!-- Left: Status Message -->
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
            </StatusBarItem>
            
            <!-- Right: Metrics + Progress -->
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                     <ProgressBar Width="100" Height="4" IsIndeterminate="True" BorderThickness="0" Background="{DynamicResource ContentBackgroundBrush}" Foreground="{StaticResource AccentBrush}"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding MetricsText}" FontSize="12" FontFamily="Consolas"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

    </Grid>


    <!-- Help Overlay (Spans entire Window) -->
    <!-- We bind directly to IsHelpVisible, converting boolean to visibility -->
    <views:HelpView Grid.RowSpan="99" Grid.ColumnSpan="99" 
                    Visibility="{Binding IsHelpVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    d:IsHidden="True"/>

</Grid>
</Window>
